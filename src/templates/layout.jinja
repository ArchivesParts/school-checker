    <script src="https://kit.fontawesome.com/57ea5c12e5.js" crossorigin="anonymous"></script>
    <title>{% block title %} {% endblock %}</title>
    <script>
        function check(id, box){
            fetch('/check/'+id)
                .then(function(response) {
                    return response.text()
                })
                .then(function(response) {
                    if(response=="ok"){
                        box.disabled=true
                        location.reload();
                    }
                });
        }
    </script>
</head>

